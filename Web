fetch("accounts.json")
  .then(res => res.json())
  .then(data => {
    const container = document.getElementById("acc-container");
    data.forEach(acc => {
      const card = document.createElement("div");
      card.className = "card";
      card.innerHTML = `
        <img src="${acc.image}" alt="${acc.game}">
        <div class="card-content">
          <h3>${acc.game}</h3>
          <p><strong>TÃ i khoáº£n:</strong> ${acc.username}</p>
          <p><strong>GiÃ¡:</strong> ${acc.price.toLocaleString()} VNÄ</p>
          <button onclick="buyAcc(${acc.id})">Mua ngay</button>
        </div>
      `;
      container.appendChild(card);
    });
  });

